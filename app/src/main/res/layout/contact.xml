<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="35dp"
            android:background="#FFFFFF"
            android:textAlignment="center"
            app:title="Sign Up For Ones in Contact of Infected"
            app:titleTextColor="#800080"
            android:layout_marginBottom="40dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:id="@+id/namecontact"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="phone no."
            android:id="@+id/phnocontact"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email"
            android:id="@+id/emailcontact"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Aadhaar no."
            android:id="@+id/aadharcontact"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:id="@+id/agecontact"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blood Group"
            android:id="@+id/bloodgroupcontact"
            />
<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Write Symptoms that you notice in yourself"
    android:id="@+id/symptomscontact"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a hopital to request"
            android:textSize="20sp"
            />
        <Spinner
            android:id="@+id/spinnercontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/applycontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Apply For Monitoring"
            android:textColor="#971A9F"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>