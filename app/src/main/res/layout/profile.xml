<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile"
    >
    <TextView
        android:id="@+id/heading"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Profile"
        android:textSize="32dp"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimary"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/heading"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:padding="5dp"
            android:text="Name: "
            tools:ignore="NotSibling" />
        <EditText
            android:id="@+id/name2"
            android:layout_width="440dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_below="@+id/heading"
            android:padding="5dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/name1"
            android:text="Raone"
            android:textSize="20dp"
            tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/age1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/name1"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:padding="5dp"
                android:text="Age: " />
            <EditText
                android:id="@+id/age2"
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_below="@+id/name2"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/age1"
                android:text="55"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/gender1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/age1"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:padding="5dp"
                android:text="Gender: " />
            <EditText
                android:id="@+id/gender2"
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_below="@+id/age2"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@+id/gender1"
                android:text="Male"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/phone1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/gender1"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:padding="5dp"
                android:text="Phone No: " />
            <EditText
                android:id="@+id/phone2"
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_below="@+id/gender2"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@+id/phone1"
                android:text="1234567890"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/email1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/phone1"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:padding="5dp"
                android:text="Email-id: " />
            <EditText
                android:id="@+id/email2"
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_below="@+id/phone2"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/email1"
                android:text="raone@gmail.com"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/address1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/email1"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:padding="5dp"
                android:text="Address: " />
            <EditText
                android:id="@+id/address2"
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_below="@+id/email2"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@+id/address1"
                android:text="Nizamuddin, New Delhi -194526"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/bloodgrp1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/address1"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:padding="5dp"
                android:text="Blood Group: " />
            <EditText
                android:id="@+id/bloodgrp2"
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_below="@+id/address2"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_toRightOf="@+id/bloodgrp1"
                android:text="AB-"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/aadhar1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/bloodgrp1"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:padding="5dp"
                android:text="Aadhar number: " />
            <TextView
                android:id="@+id/aadhar2"
                android:layout_width="440dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_below="@+id/bloodgrp2"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/aadhar1"
                android:text="1987 8745 1234"
                android:textSize="20dp"
                />
            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:background="#FF6347"
                android:text="Update"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:layout_below="@+id/aadhar2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"/>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>



</RelativeLayout>